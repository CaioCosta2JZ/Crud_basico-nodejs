<h1>Salas</h1>
<a href="/salas/add" class="btn btn-success mb-3">Add Sala</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% sala.forEach(sala => { %>
        <tr>
            <td><%= sala.id %></td>
            <td><%= sala.nome %></td>
            <td>
                <a href="/salas/edit/<%= sala.id %>"
                    class="btn btn-primary btn-sm">Editar</a>
                <form action="/salas/delete/<%= sala.id %>"
                    method="POST" class="d-inline">
                    <button type="submit"
                        class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
